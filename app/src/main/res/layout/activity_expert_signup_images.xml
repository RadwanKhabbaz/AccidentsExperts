<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <FrameLayout
        android:id="@+id/content1_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/side_nav_bar"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/myEditText"
                android:textSize="22dp"
                android:text="Uplad your papers scanned"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"/>
        </android.support.v7.widget.Toolbar>

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_marginTop="90dp"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:src="@drawable/addimage"
            android:layout_centerHorizontal="true"
            android:id="@+id/btExpert"
            android:contentDescription="Profile Ima"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="Profile Image"
            android:layout_below="@+id/btExpert"/>
        <ImageButton
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/addimage"
            android:layout_below="@+id/btExpert"
            android:id="@+id/btCertificate_Expert"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanned Certificate"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/btCertificate_Expert"
            android:id="@+id/tvCert"/>
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progSignupi"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/btExpert"
            android:src="@drawable/addimage"
            android:layout_toRightOf="@+id/btCertificate_Expert"
            android:id="@+id/btID_Expert"
            android:contentDescription=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="285dp"
            android:text="Syndicate ID "
            android:layout_below="@+id/btCertificate_Expert"
            android:id="@+id/tvID"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btCertificate_Expert"
            android:layout_marginTop="55dp"
            android:text="Submit"
            android:background="#41AFA4"
            android:textAllCaps="false"
            android:id="@+id/btSubmitImages"/>

    </RelativeLayout>

</RelativeLayout>
