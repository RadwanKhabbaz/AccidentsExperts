<?xml version="1.0" encoding="utf-8"?>
    <!-- Use DrawerLayout as root container for activity -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
        <FrameLayout
            android:id="@+id/content1_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/side_nav_bar"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/myEditText"
                android:textSize="22dp"
                android:text="Sign up as driver"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"/>
            </android.support.v7.widget.Toolbar>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/progD"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="70dp"
                android:id="@+id/LV"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lvTV">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10pt"
                        android:textColor="#00705D"
                        android:text="First Name:"
                        android:layout_margin="7dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name:"
                        android:textColor="#00705D"
                        android:textSize="10pt"
                        android:layout_margin="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Middle Name:"
                        android:textColor="#00705D"
                        android:textSize="10pt"
                        android:layout_margin="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username:"
                        android:textSize="10pt"
                        android:layout_margin="7dp"
                        android:textColor="#00705D"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password:"
                        android:textSize="10pt"
                        android:textColor="#00705D"
                        android:layout_margin="7dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number:"
                        android:textSize="10pt"
                        android:layout_margin="7dp"
                        android:textColor="#00705D"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lvLn">
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint=" First Name"
                        android:textColorHint="#868686"
                        android:id="@+id/edD_FN"
                        android:textColor="#000000"
                        />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint=" Last Name"
                        android:textColorHint="#868686"
                        android:id="@+id/edD_LN"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint=" Middle Name"
                        android:textColorHint="#868686"
                        android:id="@+id/edD_MN"
                        android:textColor="#000000"
                        />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint=" Username"
                        android:textColorHint="#868686"
                        android:id="@+id/edD_UN"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint=" Password"
                        android:textColorHint="#868686"
                        android:id="@+id/edD_Pass"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint=" Phone Number"
                        android:textColorHint="#868686"
                        android:id="@+id/edD_Ph"
                        android:textColor="#000000"
                        />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/btDriverNext"
                android:text="Next"
                android:textSize="22dp"
                android:textColor="#FDFDFD"
                android:background="#41AFA4"
                android:layout_below="@+id/LV"/>
        </RelativeLayout>
    </RelativeLayout>


